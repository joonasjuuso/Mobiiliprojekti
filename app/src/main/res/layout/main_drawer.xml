<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="closeDrawermenu"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

        <include layout="@layout/calender_layout" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/alpha_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Omat vuokrattavat"
                android:textSize="20dp"
                android:layout_weight="3"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/alpha_gray"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextViewListaVuokraus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="listaa omista vuokratuista"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"/>


            <Button
                android:id="@+id/bListaVuokraus"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="105dp"
                />

            <TextView
                android:id="@+id/TextViewVuokraa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Vuokraa mÃ¶kkisi"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"/>


            <Button
                android:id="@+id/bVuokraa"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="V"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60dp"
                />
    </RelativeLayout>


</LinearLayout>