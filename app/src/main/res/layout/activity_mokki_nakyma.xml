<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MokkiNakyma">

    <ScrollView
        android:id="@+id/ScrollViewKuvaus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bTakaisinMokkiListaan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageMokkiNakyma"
                android:layout_width="wrap_content"
                android:layout_height="250dp" />

            <TextView
                android:id="@+id/OtsikkoMokkiNakyma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/HintaMokkiNakyma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/KuvausMokkiNakyma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bTakaisinMokkiListaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Takaisin"
        android:onClick="onClick_Takaisin"/>

    <Button
        android:id="@+id/bVuokraa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Vuokraa"
        />


</RelativeLayout>