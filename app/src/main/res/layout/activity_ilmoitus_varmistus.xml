<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IlmoitusVarmistus"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bTakaisinIlmoitukseen">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otsikko:"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/sOtsikko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

            <ImageView
                android:id="@+id/ImageViewUpload"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hinta €/pvä:"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/sHinta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kohteen osoite:"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/sOsoite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huonemäärä:"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/sHuoneet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kohteen neliömäärä:"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/sNeliot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kohteen lämmitys:"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/sLammitys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Onko kohteessa juokseva vesi?"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/sVesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Onko kohteessa saunaa?"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/sSauna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vuokrattavissa alkaen:"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/textViewDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuvaus:"
                android:textColor="@color/black"
                android:textSize="20dp">
            </TextView>
            <TextView
                android:id="@+id/sKuvaus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">
            </TextView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bTakaisinIlmoitukseen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Takaisin"/>

    <Button
        android:id="@+id/bAsetaVuokralle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Ilmoita"/>

</RelativeLayout>